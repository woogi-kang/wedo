-->
<resources>
    <!-- 위젯 배경 -->
    <color name="widget_background">#FF1E1E1E</color>
    <color name="widget_header_bg">#FF2D2D2D</color>
    <color name="widget_footer_bg">#FF2D2D2D</color>

    <!-- 위젯 텍스트 -->
    <color name="widget_title_text">#FFFFFFFF</color>
    <color name="widget_text_primary">#FFE0E0E0</color>
    <color name="widget_text_secondary">#FF9E9E9E</color>
    <color name="widget_text_tertiary">#FF757575</color>
    <color name="widget_sync_text">#FF757575</color>

    <!-- 위젯 아이템 -->
    <color name="widget_item_bg">#FF2D2D2D</color>
    <color name="widget_todo_title">#FFE0E0E0</color>
    <color name="widget_category_bg">#FF3D3D3D</color>
    <color name="widget_category_text">#FFB0B0B0</color>
    <color name="widget_date_text">#FF9E9E9E</color>

    <!-- 상태 색상 (다크 모드에서도 동일) -->
    <color name="widget_overdue">#FFEF5350</color>
    <color name="widget_today">#FF64B5F6</color>
    <color name="widget_completed">#FF757575</color>

    <!-- 체크박스 색상 -->
    <color name="checkbox_empty">#FF757575</color>
