    <color name="widget_divider">#FF3D3D3D</color>

    <!-- 새로고침 버튼 색상 -->
    <color name="refresh_icon">#FF9E9E9E</color>

    <!-- "더 보기" 텍스트 색상 -->
    <color name="widget_more_text">#FF8AB4FF</color>

