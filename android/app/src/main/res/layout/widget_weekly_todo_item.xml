<?xml version="1.0" encoding="utf-8"?>
<!--
    주간 Todo 위젯 아이템 레이아웃

    각 Todo 항목을 표시하는 레이아웃입니다.
    구조: [체크박스] [제목 - 카테고리] [날짜]

    상태별 스타일:
    - 완료: 체크 아이콘, 취소선 텍스트
    - 기한 초과: 빨간색 날짜
    - 오늘: 굵은 텍스트, "오늘" 라벨
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todo_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:background="@drawable/widget_item_background"
    android:minHeight="28dp">

    <!-- 체크박스 아이콘 -->
    <ImageView
        android:id="@+id/todo_checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_checkbox_empty"
        android:scaleType="centerInside"
        android:contentDescription="@string/action_open_todo" />

    <!-- 제목 및 카테고리 컨테이너 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Todo 제목 -->
        <TextView
            android:id="@+id/todo_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 카테고리 배지 (선택적) -->
        <TextView
            android:id="@+id/todo_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginStart="4dp"
            android:textSize="10sp"
            android:textColor="@color/badge_text"
            android:background="@color/badge_background"
            android:maxLines="1"
            android:maxWidth="60dp"
            android:ellipsize="end"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 마감 날짜 -->
    <TextView
        android:id="@+id/todo_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/widget_text_secondary"
        android:maxLines="1" />
</LinearLayout>
