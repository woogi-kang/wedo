<?xml version="1.0" encoding="utf-8"?>
<!--
    캘린더 위젯 레이아웃

    4x4 사이즈: 280dp x 280dp
    월별 Todo 현황을 캘린더 형태로 표시

    RemoteViews 제한으로 각 셀에 고유 ID 부여
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- 헤더: 월 타이틀 + 네비게이션 버튼 -->
    <LinearLayout
        android:id="@+id/calendar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/btn_prev_month"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_chevron_left"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/calendar_prev_month"
            android:scaleType="centerInside"
            android:padding="2dp" />

        <TextView
            android:id="@+id/tv_month_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2026년 1월"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary" />

        <ImageButton
            android:id="@+id/btn_next_month"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_chevron_right"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/calendar_next_month"
            android:scaleType="centerInside"
            android:padding="2dp" />
    </LinearLayout>

    <!-- 요일 헤더 -->
    <LinearLayout
        android:id="@+id/weekday_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/day_mon" android:textSize="9sp" android:textColor="@color/calendar_weekday_text" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/day_tue" android:textSize="9sp" android:textColor="@color/calendar_weekday_text" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/day_wed" android:textSize="9sp" android:textColor="@color/calendar_weekday_text" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/day_thu" android:textSize="9sp" android:textColor="@color/calendar_weekday_text" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/day_fri" android:textSize="9sp" android:textColor="@color/calendar_weekday_text" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/day_sat" android:textSize="9sp" android:textColor="@color/calendar_weekend_text" />
