<?xml version="1.0" encoding="utf-8"?>
<!--
    주간 Todo 위젯 레이아웃

    4x2 사이즈: 280dp x 110dp, 최대 5개 아이템
    4x3 사이즈: 280dp x 180dp, 최대 8개 아이템

    구조:
    ┌─────────────────────────────────────────────────┐
    │  WeDo 이번 주 할 일                    [새로고침] │
    ├─────────────────────────────────────────────────┤
    │ ○ 장보기 - 마트                      1/21 (화)  │
    │ ● 마감 서류 제출                     1/20 (월)  │
    │ ...                                            │
    │          + 3개 더 보기                          │
    ├─────────────────────────────────────────────────┤
    │ 마지막 동기화: 오늘 09:30                        │
    └─────────────────────────────────────────────────┘

    주의: RemoteViews는 <include> 태그를 지원하지 않으므로
    모든 Todo 아이템 레이아웃을 인라인으로 정의해야 합니다.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- 헤더 영역 -->
    <RelativeLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <!-- 위젯 타이틀 -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/widget_weekly_header"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary" />

        <!-- 새로고침 버튼 -->
        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_refresh"
            android:background="@android:color/transparent"
            android:contentDescription="@string/widget_refresh"
            android:scaleType="centerInside"
            android:padding="4dp" />
    </RelativeLayout>

    <!-- 구분선 -->
    <View
        android:id="@+id/widget_divider_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Todo 목록 영역 -->
    <LinearLayout
        android:id="@+id/widget_todo_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Todo 아이템 1 -->
        <LinearLayout
            android:id="@+id/widget_todo_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/widget_item_background"
            android:minHeight="28dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/todo_checkbox_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_checkbox_empty"
                android:scaleType="centerInside"
                android:contentDescription="@string/action_open_todo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/todo_title_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text_primary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/todo_category_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/badge_text"
                    android:background="@color/badge_background"
                    android:maxLines="1"
                    android:maxWidth="60dp"
                    android:ellipsize="end"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/todo_due_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Todo 아이템 2 -->
        <LinearLayout
            android:id="@+id/widget_todo_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/widget_item_background"
