            android:visibility="gone">

            <ImageView
                android:id="@+id/todo_checkbox_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_checkbox_empty"
                android:scaleType="centerInside"
                android:contentDescription="@string/action_open_todo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/todo_title_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text_primary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/todo_category_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/badge_text"
                    android:background="@color/badge_background"
                    android:maxLines="1"
                    android:maxWidth="60dp"
                    android:ellipsize="end"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/todo_due_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Todo 아이템 3 -->
        <LinearLayout
            android:id="@+id/widget_todo_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/widget_item_background"
            android:minHeight="28dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/todo_checkbox_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_checkbox_empty"
                android:scaleType="centerInside"
                android:contentDescription="@string/action_open_todo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/todo_title_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text_primary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/todo_category_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/badge_text"
                    android:background="@color/badge_background"
                    android:maxLines="1"
                    android:maxWidth="60dp"
                    android:ellipsize="end"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/todo_due_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Todo 아이템 4 -->
        <LinearLayout
            android:id="@+id/widget_todo_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/widget_item_background"
            android:minHeight="28dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/todo_checkbox_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_checkbox_empty"
                android:scaleType="centerInside"
                android:contentDescription="@string/action_open_todo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/todo_title_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text_primary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/todo_category_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/badge_text"
                    android:background="@color/badge_background"
                    android:maxLines="1"
                    android:maxWidth="60dp"
                    android:ellipsize="end"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/todo_due_date_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Todo 아이템 5 -->
        <LinearLayout
            android:id="@+id/widget_todo_item_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/widget_item_background"
            android:minHeight="28dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/todo_checkbox_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_checkbox_empty"
                android:scaleType="centerInside"
                android:contentDescription="@string/action_open_todo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/todo_title_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="@color/widget_text_primary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/todo_category_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/badge_text"
                    android:background="@color/badge_background"
                    android:maxLines="1"
                    android:maxWidth="60dp"
                    android:ellipsize="end"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/todo_due_date_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/widget_text_secondary"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 빈 상태 메시지 -->
        <TextView
            android:id="@+id/widget_empty_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/widget_no_data"
            android:textSize="14sp"
            android:textColor="@color/widget_text_tertiary"
            android:visibility="gone" />

        <!-- "더 보기" 텍스트 -->
        <TextView
            android:id="@+id/widget_more_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/widget_more_text"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:id="@+id/widget_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- 푸터 영역 (마지막 동기화 시간) -->
    <TextView
        android:id="@+id/widget_last_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:gravity="start"
        android:textSize="10sp"
        android:textColor="@color/widget_text_tertiary"
        android:maxLines="1"
        android:ellipsize="end" />
</LinearLayout>
