<?xml version="1.0" encoding="utf-8"?>
<!--
    캘린더 위젯 메타데이터

    홈 화면에서 위젯 추가 시 표시되는 정보를 정의합니다.
    Phase 2에서 previewImage, configure 속성이 추가됩니다.
-->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="250dp"
    android:minHeight="250dp"
    android:targetCellWidth="4"
    android:targetCellHeight="4"
    android:minResizeWidth="180dp"
    android:minResizeHeight="180dp"
    android:resizeMode="horizontal|vertical"
    android:widgetCategory="home_screen"
    android:initialLayout="@layout/widget_calendar"
    android:description="@string/widget_calendar_description"
    android:updatePeriodMillis="1800000">
    <!-- updatePeriodMillis: 30분 (최소 30분) -->
</appwidget-provider>
